//                System.exit(0);
//            }
//            catch (TwitterException te){
//                te.printStackTrace();
//                System.out.println("Failed to search tweets: " + te.getMessage());
//                System.exit(-1);
//            }
        }
        catch (TwitterException ex){
            Logger.getLogger(twitterJava.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
}
